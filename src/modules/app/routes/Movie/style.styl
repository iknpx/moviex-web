@import '~@core/mixins/animate'
@import '~@core/mixins/route'
route()

.container
	width 100%
	align-items center

.content
	display flex
	flex-wrap wrap
	position relative
	width auto
	justify-content center

.actions
	padding 20px 35px
	flex-direction column
	width 100%
	background-color #EEE
	display flex
	flex-direction column
	align-items center

	&-container
		padding 0 35px

.torrents
	fadeIn(.2s)
	background-color #FFF
	border 1px solid #EEE
	border-radius 2px
	padding 15px
	margin-top 15px
	width 100%

.torrent
	display flex
	flex-direction column

	&:not(:last-child)
		margin-bottom 5px

.size
	font-size .8em
	color #777

.link
	color #c30

.movies
	align-items center
	display flex
	flex-direction column
	width 100%
	padding-bottom 50px

.title
	background-color #fff
	color #777
	font-size 1.6em
	padding 35px 0 15px
	text-align center
	width 100%
	display flex
	align-items center
	justify-content center
