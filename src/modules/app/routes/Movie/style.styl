@import '~@core/mixins/route'
route()

.container
	width 100%

.title
	background-color #fff
	border-bottom 1px solid #eee
	color #777
	font-size 1.6em
	padding 40px 0 40px
	position sticky
	text-align center
	top 0
	width 100%
	z-index 10

.recommendations
	align-items center
	display flex
	flex-direction column
	width 100%
	padding-bottom 50px

.movies
	display flex
	flex-direction column
	align-items center

.content
	display flex
	flex-wrap wrap
	position relative
	width auto
