.container
	display flex
	text-decoration none
	border 1px solid #CCC
	padding 0 40px
	height 41px
	align-items center
	border-radius 21px
	font-size .9em
	transition all .2s ease-in-out
	cursor pointer
	user-select none
	width 180px
	text-align center
	justify-content center
	background-color #FFF

	&:hover
		background-color rgba(0, 0, 0, .1)
