@import '../../mixins/animate'

.container
	fadeIn(.4s)
	display flex
	height 100%
	align-items center
	justify-content center
	background-color #eee
	padding 50px
	border-radius 2px
	box-shadow 0 2px 7px 0 rgba(0, 0, 0, .17)
	position relative
	top 20vh
	font-size 1.2em
	flex-direction column

	& > span
		&:last-child
			margin-top 20px

.img
	width 40px
	margin-bottom 30px
