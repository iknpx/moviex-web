.container
	display block

.button
	text-decoration none
	border 1px solid #9F9F9F
	padding 0 40px
	height 42px
	align-items center
	border-radius 21px
	font-size 18px
	transition all .2s ease-in-out
	display none
	cursor pointer

	&:hover
		background-color rgba(255, 255, 255, .2)

.visible
	display flex

.title
	font-size .7em
	text-transform uppercase
	position relative
	top 1px
