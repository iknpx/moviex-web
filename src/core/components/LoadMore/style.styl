.container
	align-items center
	align-items stretch
	background-color #FFF
	border-radius 20px
	cursor pointer
	display flex
	height 41px
	outline 0
	user-select none

	&:hover
		& > .title
			background-color #CCC

.loading
	cursor default
	background-color rgba(255, 255, 255, .6)

	&:hover
		& > .title
			background-color #DDD

.title
	display flex
	height 100%
	align-items center
	padding 0 30px
	border-top-left-radius 20px
	border-bottom-left-radius 20px
	background-color #DDD

.count
	background-color #777
	height 100%
	display flex
	color #FFF
	flex-grow 1
	width 60px
	align-items center
	justify-content center
	border-top-right-radius 20px
	border-bottom-right-radius 20px
